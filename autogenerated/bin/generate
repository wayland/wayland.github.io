#!/bin/bash

paths="blog"
xml_files=`find $paths -name '*.xml'`

xsltproc autogenerate/xsl/sitemap.xsl $xml_files > autogenerated/output/sitemap.xml
xsltproc autogenerate/xsl/rss.xsl $xml_files > autogenerated/output/rss.xml

for path in $paths; do
	xml_files=`find $path -name '*.xml'`
	xsltproc autogenerate/xsl/teasers.xsl > $path/teasers.xml
done

#        -       Site map
#        -       RDF/XML format for RSS feed
#        -       Teaser lists
#        -       Dates of creation/update
